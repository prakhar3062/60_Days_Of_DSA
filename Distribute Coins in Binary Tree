class Solution {
public:
    int distributeCoins(TreeNode* root) {
         int ans=0;
       dfs(root,ans);
        return ans;
    }
    int dfs(TreeNode* root,int &ans){
         if(root==NULL)
            return 0;
        int left=dfs(root->left,ans);
        int right=dfs(root->right,ans);
        ans+=abs(left)+abs(right);
        return root->val+left+right-1;
    }
};
