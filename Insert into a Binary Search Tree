 
class Solution {
public:
    TreeNode* insertIntoBST(TreeNode* root, int val) {
        TreeNode* t=new TreeNode(val);
        if(!root) return t;// returning new tree
        if(root->val<val)
            root->right=root->right?insertIntoBST(root->right,val):t;// adding node to right if value is greater than root value
        else
            root->left=root->left?insertIntoBST(root->left,val):t;
        return root;
    }
};
