// We are doing simple dfs 
class Solution {
public:
    bool dfs(TreeNode* root,int curSum,int targetSum){
        if(root==NULL)
            return false;
        curSum+=root->val;
        if(root->right==NULL && root->left==NULL)
            return curSum==targetSum;
        return dfs(root->left,curSum,targetSum) ||dfs(root->right,curSum,targetSum);// Checking in either path currsum equates to targetsum 
        
        
    }
    bool hasPathSum(TreeNode* root, int targetSum) {
        int sum=0;
        return dfs(root,0,targetSum);
    }
};
